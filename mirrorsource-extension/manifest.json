        "*://*.cnn.com/*",
        "*://*.foxnews.com/*",
        "*://*.nbcnews.com/*",
        "*://*.cbsnews.com/*",
        "*://*.abcnews.go.com/*",
        "*://*.npr.org/*",
        "*://*.pbs.org/*",
        "*://*.theguardian.com/*",
        "*://*.politico.com/*",
        "*://*.thehill.com/*",
        "*://*.axios.com/*",
        "*://*.vox.com/*",
        "*://*.vice.com/*",
        "*://*.buzzfeednews.com/*",
        "*://*.huffpost.com/*",
