{
  "manifest_version": 3,
  "name": "MirrorSource",
  "version": "1.2.0",
  "description": "See the whole story. Find free coverage of any news article from multiple perspectives.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.wsj.com/*",
        "*://*.nytimes.com/*",
        "*://*.washingtonpost.com/*",
        "*://*.ft.com/*",
        "*://*.economist.com/*",
        "*://*.bloomberg.com/*",
        "*://*.reuters.com/*",
        "*://*.apnews.com/*",
