        "*://*.usatoday.com/*",
        "*://*.latimes.com/*",
        "*://*.chicagotribune.com/*",
        "*://*.nypost.com/*",
        "*://*.bostonglobe.com/*",
        "*://*.sfchronicle.com/*",
        "*://*.seattletimes.com/*",
